<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<h1><%= @User.alias %></h1>
			<div class="profilePicture">
				<img class='profilePicture' src='<%= @User.avatar.url   %>' />
			</div>
			<h2><%= @User.first_name %> <%= @User.last_name %></h2>
			<h2><%= @User.email %></h2>
			<h3><%= @User.location %></h3>
			<h3><%= @User.tagline %></h3>
		</div>
		<div class="col-xs-8">
			<h1>Tracks</h1>			
			<% @User.tracks.each do |t| %>	
				<div class="track">			
					<div id="waveform<%= t.id %>"></div>
						<div class="control">
							 <button class="btn btn-primary" onclick="wavesurfer<%= t.id %>.playPause()">
								<i class="glyphicon glyphicon-play"></i>
			    				Play
			  				</button>
							<p><a href="/tracks/<%= t.id %>"><%= t.title %></a></p>
							<p><%= t.desc %></p>
						</div>
					<script type="text/javascript">
						var wavesurfer<%= t.id %> = WaveSurfer.create({
							barWidth: 1,
							fillParent: true,
							progressColor: 'green',
							waveColor: 'orange',
							container: '#waveform<%= t.id %>',
							backend: 'MediaElement',
							scrollParent: true
						});
						wavesurfer<%= t.id %>.load('<%= t.avatar.url %>');
					</script>
				</div>
			<% end %>			
		</div>
	</div>
</div>
