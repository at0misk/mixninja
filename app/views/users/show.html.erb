<div class="container">
	<div class="row">
		<div class="col-xs-4">
			<%= current_user[:id] %>
			<h1><%= @User.alias %></h1>
			<div class="profilePicture">
				<img class='profilePicture' src='<%= @User.avatar.url   %>' />
			</div>
			<h2><%= @User.first_name %> <%= @User.last_name %></h2>
			<h2><%= @User.email %></h2>
			<h3><%= @User.location %></h3>
			<h3><%= @User.tagline %></h3>
		</div>
		<div class="col-xs-8">
			<h1>Tracks</h1>
			<div class="track">
				<% @User.tracks.each do |t| %>
				<p><a href="/tracks/<%= t.id %>"><%= t.title %></a></p>
				<p><%= t.desc %></p>
				<% end %>
			</div>
		</div>
	</div>
</div>
