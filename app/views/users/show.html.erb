<div class="container">
	<div class="buffer">
	</div>
	<div class="row">
			<div class="col-xs-12" id="profile">
				<div class="profilePicture">
					<img class='profilePicture' src='<%= @User.avatar.url   %>' />
				</div>
				<div class="profileInfo">
				<span class="userAlias"><%= @User.alias %></span>
				<span class="userName"><%= @User.first_name %> <%= @User.last_name %></span>
				<span class="userField"><%= @User.email %></span>
				<span class="userField">Location: <%= @User.location %></span>
				<span class="userField">"<%= @User.tagline %>"</span>
				</div>
			</div>
	</div>
	<div class="row">
		<div class="col-xs-8">
			<h1>Tracks</h1>			
			<% @User.tracks.each do |t| %>	
				<div class="track">			
					<div id="waveform<%= t.id %>"></div>
						<div class="control">
							 <button class="btn btn-primary" onclick="wavesurfer<%= t.id %>.playPause()">
								<i class="glyphicon glyphicon-play"></i>
			    				Play
			  				</button>
							<p><a href="/tracks/<%= t.id %>"><%= t.title %></a></p>
							<p><%= t.desc %></p>
						</div>
					<script type="text/javascript">
						var wavesurfer<%= t.id %> = WaveSurfer.create({
							barWidth: 1,
							fillParent: true,
							progressColor: 'green',
							waveColor: 'orange',
							container: '#waveform<%= t.id %>',
							backend: 'MediaElement',
							scrollParent: true
						});
						wavesurfer<%= t.id %>.load('<%= t.avatar.url %>');
					</script>
				</div>
			<% end %>			
		</div>
	</div>
</div>
<%= current_user[:id] %>