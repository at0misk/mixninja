<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1><%= @Track.title %></h1>
			<h3>By: <a href="/users/<%= @Track.user.id %>"><%= @Track.user.first_name %> <%= @Track.user.last_name %></a></h3>
			<p><%= @Track.desc %></p>

			<div class="track">
				<div id="waveform"></div>
						<div class="control">
							 <button class="btn btn-primary" onclick="wavesurfer.playPause()">
								<i class="glyphicon glyphicon-play"></i>
			    				Play
			  				</button>							
						</div>
					<script type="text/javascript">
						var wavesurfer = WaveSurfer.create({
							barWidth: 1,
							fillParent: true,
							progressColor: 'green',
							waveColor: 'orange',
							container: '#waveform',
							backend: 'MediaElement',
							scrollParent: true
						});
						wavesurfer.load('<%= @Track.avatar.url %>');
					</script>
			</div>
			<div class="track">
				Track List
			</div>
			<div class="track">
				Comments
				<% if @Track.comments %>
					<% @Track.comments.each do |c| %>
					<p><%= c.content %></p>
					<p>By: <a href="/users/<%= c.user.id %>"><%= c.user.first_name %> <%= c.user.last_name %></a></p>
					<% end %>
				<% end %>
			</div>
			<form action="/comments" method="post" class="commentForm">
				<h3>Add A Comment:</h3>
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<input name="comment[track_id]" value="<%= @Track.id %>" type="hidden">
				<input name="comment[user_id]" value="<%= current_user[:id] %>" type="hidden">
				<textarea name="comment[content]" class="commentBox"></textarea>
				<p><input type="submit" value="Comment"></p>
			</form>
		</div>
	</div>
</div>